<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TRTCVoiceRoomChatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/trtcvoiceroom_white</item>
    </style>

    <style name="TRTCVoiceRoomDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/trtcvoiceroom_color_bg_dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Input dialog theme. -->
    <style name="TRTCVoiceRoomInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="TRTCVoiceRoomButtonStyle">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TRTCVoiceRoomCreateRadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>