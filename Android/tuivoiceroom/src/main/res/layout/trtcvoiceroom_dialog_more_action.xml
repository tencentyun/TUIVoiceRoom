<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:background="@drawable/trtcvoiceroom_bg_dialog"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/trtcvoiceroom_tools"
        android:textColor="@color/trtcvoiceroom_black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_ear_monitor"
        style="@style/TRTCVoiceRoomButtonStyle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/trtcvoiceroom_button_ear_monitor"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/tv_ear_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/trtcvoiceroom_regurgitation"
        android:textColor="@color/trtcvoiceroom_black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/btn_ear_monitor"
        app:layout_constraintRight_toRightOf="@id/btn_ear_monitor"
        app:layout_constraintTop_toBottomOf="@id/btn_ear_monitor" />

</androidx.constraintlayout.widget.ConstraintLayout>
